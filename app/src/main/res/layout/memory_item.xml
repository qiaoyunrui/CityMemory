<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_memory_item_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">

            <ImageView
                android:id="@+id/img_memory_item_avatar"
                android:layout_width="@dimen/memory_item_avatar_size"
                android:layout_height="@dimen/memory_item_avatar_size"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/ic_avatar_primary" />

            <TextView
                android:id="@+id/tv_memory_item_pickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/img_memory_item_avatar"
                android:text="居合子"
                android:textColor="@android:color/black"
                android:textSize="@dimen/nav_header_name_text_size" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_memory_item_memory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wall_pic_height"
            android:layout_below="@+id/rl_memory_item_user_info"
            android:scaleType="centerCrop"
            android:src="@drawable/city" />

    </RelativeLayout>


</android.support.v7.widget.CardView>